@import 'colors'

label.label
  color: #414141
  display: block
  margin-bottom: 7px
  font-size: 13px

input[type="text"]
input[type="email"]
input[type="password"]
input[type="number"]
textarea
  border: 1px solid #CCCCCC
  border-radius: 2px
  font-size: 13px
  outline: none !important
  -webkit-appearance: none
  
  &:disabled
    background: rgba(240, 240, 240, 0.58)
  
  &:focus
    border-color: #d0ba65;
    -webkit-box-shadow: 0 0 10px #fc0;
    box-shadow: 0 0 10px #fc0;

input[type="text"]
input[type="email"]
input[type="password"]
input[type="number"]
  height: 30px
  padding-left: 8px
  
textarea
  padding: 8px
  width: 100%

.noselect
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none

input
  outline: none !important

a
  cursor: pointer

.btn
  height: 32px
  line-height: 31px
  padding: 0 15px
  text-align: center
  border-radius: 2px
  cursor: pointer
  white-space: nowrap
  display: inline-block
  text-decoration: none
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none
  
  &.btn-lg
    height: 40px
    line-height: 39px
    padding: 0 25px

  btn($color)
    background: $color
    color: #2B2B2B

    &:hover
      background: lighten($color, 15%)

    &:active
      -moz-box-shadow: inset 0 1px 3px -1px rgba(0, 0, 0, 0.5)
      -webkit-box-shadow: inset 0 1px 3px -1px rgba(0, 0, 0, 0.5)
      box-shadow: inset 0 1px 3px -1px rgba(0, 0, 0, 0.5)

  &-default
    btn(white)
    border: 1px solid rgba(0,0,0,.2)
    
    &:hover
      border: 1px solid rgba(0,0,0,.3)

  &-primary
    btn($yellow)
    border: 1px solid #D7B940

  &-danger
    btn($red)
    color: white

hr
  border: none
  border-top: 1px solid #D8D8D8
  margin: 0
  
.checkbox
  width: auto !important
  cursor: pointer
  display: inline-block !important
  color: #414141
  
input[type="checkbox"]
  display: none

input[type="checkbox"]:checked ~ .checker:before
  content: "\e622"
  font-size: 15px
  position: relative
  top: 1px
  z-index: 2

.checker
  margin: -1px 7px 0 0
  background: white
  width: 19px
  height: 19px
  color: black
  text-align: center
  border: 1px solid #ccc
  border-radius: 2px
  display: inline-block !important
  vertical-align: middle
  font-family: 'icomoon'
  speak: none
  font-style: normal
  font-weight: normal
  font-variant: normal
  text-transform: none
  line-height: 1
  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  
label.input input
  width: 100%

.sep
  float: left
  height: 30px
  width: 15px
  line-height: 78px
  font-size: 16px
  text-align: center
  vertical-align: bottom
  
.errors
  font-size: 12px
  color: red
  opacity: 0
  transition: .3s
  
  &.show
    opacity: 1