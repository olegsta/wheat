.fade
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  opacity 1

  &.ng-enter
    opacity 0
  &.ng-enter-active
    opacity 1
  &.ng-leave
    opacity 1
  &.ng-leave-active
    opacity 0

.fade.ng-enter,
.fade.ng-leave
  -webkit-transition all .3s ease
  -moz-transition all .3s ease
  -o-transition all .3s ease
  transition all .3s ease

.page
  background: white
  -webkit-box-shadow: 0 1px 3px 1px rgba(0,0,0,0.1)
  box-shadow: 0 1px 3px 1px rgba(0,0,0,0.1)
  padding: 30px 10px 30px 30px
  overflow-y: auto
  
  &-overlay
    position: fixed
    left: 0
    right: 0
    bottom: 0
    top: 0
    z-index: 10
  
  &__close
    font-size: 34px
    position: absolute
    right: 15px
    top: 15px
    color: #868686
    cursor: pointer
    text-decoration: none
    
    &:hover
      color: black