@import 'colors'

.widget
  width: 300px
  background: white
  -webkit-box-shadow: 0 2px 3px 1px rgba(0,0,0,.2)
  box-shadow: 0 2px 3px 1px rgba(0,0,0,.2)
  margin-bottom: 10px
  border-radius: 3px
  
  &__header
    height: 40px
    position: relative
    border-bottom: 1px solid rgba(0,0,0,.1)
    
    .close
      font-size: 16px
      position: absolute
      right: 12px;
      top: 12px;
      
      &:hover
        color: $red
        cursor: pointer

  &__title
    font-size: 16px
    line-height: 41px
    text-align: center
  
  &__description
    box-shadow: 0px 3px 3px rgba(0, 0, 0, 0.05)
    border-bottom: solid 2px $yellow
    padding: 10px
    font-size: 12px
    text-align: center
    color: #666