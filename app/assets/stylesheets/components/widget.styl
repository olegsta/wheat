.expand-widget
  .widget
    border-radius: 0
    width: 300px
    margin: 0
    -o-transform: scale(1) !important
    -moz-transform: scale(1) !important
    -ms-transform: scale(1) !important
    -webkit-transform: scale(1) !important
    transform: scale(1) !important
    
    &:not(.active)
      .widget__title
        background-color: rgba(240,240,240,0.38)

        &:hover
          background: white

.widget
  width: 140px
  margin: 0 0 5px 0
  border-radius: 38px
  height: 38px
  background: white
  -webkit-box-shadow: 0 1px 3px 1px rgba(0,0,0,0.1)
  box-shadow: 0 1px 3px 1px rgba(0,0,0,0.1)
  transition: .3s
  overflow: hidden
  
  &.active
    height: 390px
    
    .close
      visibility: visible
    
    .widget__title
      border-bottom: 1px solid rgba(0,0,0,0.1)

    .widget__body
      visibility: visible
      opacity: 1


  &:not(.active)
    &:hover
      transform: scale(1.1)
      -moz-transform: scale(1.1)
      -o-transform: scale(1.1)
      -ms-transform: scale(1.1)
      -webkit-transform: scale(1.1)

  &__title
    font-size: 16px
    line-height: 38px
    text-align: center
    cursor: pointer

  &__body
    visibility: hidden
    opacity: 0
    transition: .3s

  .close
    visibility: hidden
    font-size: 16px
    position: absolute
    right: 12px;
    top: 12px;
    
    &:hover
      color: red
      cursor: pointer

  &__description
    width: 300px
    box-shadow: 0px 3px 3px rgba(0, 0, 0, 0.05)
    border-bottom: solid 2px #ffdb4c
    padding: 10px
    font-size: 12px
    text-align: center
    color: #666
    background: white