category
  position: relative

  &.right
    .dropdown
      right: 0

.categories
  width: 700px
  
  .dropdown
    padding: 0
    margin-bottom: 30px
    
  
  &__search
    box-shadow: 0px 1px 3px -2px rgba(0, 0, 0, 0.4)
    padding: 12px
    margin-bottom: 10px

    .icon-search
      position: absolute
      font-size: 20px
      padding: 8px
      color: #757575
      
    &__input
      height: 38px !important
      padding-left: 33px !important
      width: 100% !important

  &__list
    max-height: 300px
    overflow-y: auto
    position: relative

  &__column
    width: 33%
    float: left

  &__item
    margin-bottom: 20px
    border-bottom: 1px solid #E5E5E5
    vertical-align: top

  &__title
    color: #428bca
    font-size: 17px
    padding-left: 15px
    padding-bottom: 5px
    white-space: nowrap
    
  &__options
    //
  &__option
    &.active
      background: #FFDB4C !important

    &:hover
      background: #e7e7e7

    &__title
      padding: 8px 30px 8px 15px
      font-weight: 400
      line-height: 1.2
      color: #333
      white-space: normal
      cursor: pointer
      
        

  &__footer
    background: #F5F5F5
    padding: 10px 18px
    text-align: right
    display: block
    border-top: 1px solid rgba(0, 0, 0, 0.08)
    
    .no-category
      color: #333
      margin: 7px 6px
      display: inline-block
      border-bottom: 1px dotted
      line-height: 17px
      text-decoration: none