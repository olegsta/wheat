@import 'colors';

$search_height = 38px

.search
  min-width: 470px
  max-width: 1000px;
  
  &__form
    position: relative
    z-index: 1
    
    .search__input
      height: 38px
      position: absolute
      left: 0
      right: 80px
      box-shadow: 2px 2px 3px rgba(0, 0, 0, 0.2)
    
    .search__addons
      position: absolute
      z-index: 1
      right: 0
      top: 0
      color: #B3B3B3
      padding: 12px 20px
      
      i
        cursor: pointer
  
      i:hover
        color: #333

      .icon-extended
        font-size: 15px
      
    input[type="text"]
      width: 100%;
      height: 100%;
      padding-left: 15px;
      border: none;
      box-shadow: 0 0 0 2px white inset;
      transition: box-shadow .3s;
      position: relative
      z-index: 1
      
      &:focus
        box-shadow: 0 0 0 2px $yellow inset
      
    .search__btn
      height: $search_height
      width: 80px
      position: absolute
      right: 3px
      background: $yellow
      color: #2B2B2B
      font-size: 16px
      padding: 10px 20px
      cursor: pointer
      
      span
        position: absolute
        top: 0
        bottom: 0
        left: 0
        right: 0
        z-index: 1
        background: $yellow
        padding: 9px 20px
        
        &:hover
          &
            background: lighten($yellow, 15%)
          &:after
            border-color: transparent transparent transparent lighten($yellow, 15%)
        
        &:after
          content: ''
          position: absolute
          top: 18px
          left: 100%
          z-index: 1
          margin-top: -18px
          border-width: 19px 0 19px 10px
          border-style: solid
          border-color: transparent transparent transparent $yellow
          line-height: 0
      
      &:before, &:after
        content: ''
        position: absolute
        background-color: rgba(0, 0, 0, 0.2)
        -webkit-box-shadow: 0 2px 3px 0 rgba(0, 0, 0, 0.2)
        box-shadow: 0 2px 3px 0 rgba(0, 0, 0, 0.2)
        -webkit-transition: background-color 0.2s cubic-bezier(0.455, 0.03, 0.515, 0.955), -webkit-box-shadow 0.2s cubic-bezier(0.455, 0.03, 0.515, 0.955)
        transition: background-color 0.2s cubic-bezier(0.455, 0.03, 0.515, 0.955), box-shadow 0.2s cubic-bezier(0.455, 0.03, 0.515, 0.955)
      
      &:before
        top: 0
        right: -5px
        bottom: 50%
        left: 7px
        -webkit-transform: matrix(1, 0, 0.53, 1, 0, 0)
        -ms-transform: matrix(1, 0, 0.53, 1, 0, 0)
        transform: matrix(1, 0, 0.53, 1, 0, 0)
      
      &:after
        top: 50%
        right: -5px
        bottom: 0
        left: 7px
        border-bottom-left-radius: 2px
        -webkit-transform: matrix(1, 0, -0.53, 1, 0, 0)
        -ms-transform: matrix(1, 0, -0.53, 1, 0, 0)
        transform: matrix(1, 0, -0.53, 1, 0, 0)
  
  &__count
    height: 25px
    background: #F0F0F0
    padding: 7px
    font-size: 12px
    color: #6E6E6E
    white-space: nowrap
    overflow: hidden
    box-shadow: 1px 2px 3px rgba(0, 0, 0, 0.11)
  
  &__tags
    position: relative
    
    .tags
      border: none
      
      &__area
        padding: 6px 5px

      .add_tag
        margin: 6px 5px