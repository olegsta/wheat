@import 'colors'

.select
  display: inline-block
  border: 1px solid #ccc
  height: 30px
  border-radius: 2px
  min-width: 115px
  cursor: pointer
  position: relative

  &__current
    padding: 6px 25px 6px 6px
    position: relative
    background: white
    
    &:hover
    &.active
      background: #F7F7F7
    
    i
      font-size: 14px
      position: absolute
      right: 6px;
      top: 8px;
      
  &__list
    position: absolute
    top: 30px
    left: -1px
    right: -1px
    max-height: 100px
    border: 1px solid #ccc

  &__item
    padding: 6px
    background: white

    &:hover
      background: #fee9a5

    &.active
      background: $yellow