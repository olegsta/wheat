.tabs
  width: 100%
  margin-left: 2px

  .tab
    float: left
    text-align: center
    height: 42px
    line-height: 41px
    border: 1px solid #e5e5e5
    margin-left: -1px
    cursor: pointer
    font-size: 13px
    
    &.active
      background: #f8f8f8
      box-shadow: 0px -2px 0 #ffdb4c inset
      
