@import 'colors';

.tags
  border: 1px solid #e7e7e7

  &__area
    background: white
    height: 38px
    padding: 5px

  .tag
    font-size: 13px
    height: 27px
    line-height: 26px
    white-space: nowrap
    border: 1px solid #F5B800
    background: #FFF09C
    border-radius: 2px
    color: #6A5218
    display: inline-block
    position: relative
    padding: 0 25px 0 9px
    
    .delete-tag
      font-size: 23px
      font-weight: lighter
      position: absolute
      right: 5px
      top: -1px
      cursor: pointer
      
      &:hover
        color: $red
    
  .add-tag
    float: right
    margin: 5px
    line-height: 27px
    height: 28px
    padding-left: 30px
    padding-right: 10px
    position: relative
    
    span
      padding-left: 8px

    .addon-plus
      position: absolute
      left: 0
      top: 0
      bottom: 0
      height: 26px
      width: 28px
      text-align: center
      border-right: 1px solid #d7b940
      font-size: 20px
      font-weight: lighter
