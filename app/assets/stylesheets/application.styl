html, body {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  font-size: 14px;
  font-family: 'Roboto', sans-serif;
  min-width: 1000px;
}

body {
  overflow: hidden;
  position: relative;
}

* {
  box-sizing: border-box;    
}

h1 {
  font-weight: 400;
  font-size: 24px;
  margin: 0 20px 20px -30px;
  padding: 0 0 0 30px;
  border-bottom: 2px solid rgb(255, 219, 76);
  display: inline-block;
}

h2 {
  font-size: 18px;
  color: #414141;
  margin: 0 0 20px 0;
  font-weight: normal;
}

.pull-right {
  float: right !important;
}

.pull-left {
  float: left !important;
}

.clearfix:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;
}

.red {
  color: red;
}

.ib {
  display: inline-block;
}

.canvas {
  height: 400px;
  width: 700px;
  position: absolute;
  top: 100px;
  left: 275px;
  z-index: 1;
  background: white;
  padding: 20px;

  .dimension {
    width: 125px
  }

  .row {
    margin: 20px 0;
  }
}

.z1, .z2, .z3 {
  position: relative;
}

.z1 {
  z-index: 1;
}

.z2 {
  z-index: 2;
}

.z3 {
  z-index: 3;
}

.dotted {
  border-bottom: 1px dotted;
}

.padding-0 {
  padding: 0 !important;
}

.margin-0 {
  margin: 0 !important;
}

.blur {
  -webkit-filter: blur(3px);
  -o-filter: blur(3px);
  -ms-filter: blur(3px);
  -moz-filter: blur(3px);
  filter: blur(3px);
}

.block {
  display: block !important;
}

.float-none {
  float: none !important;
}

.mb0 {
  margin-bottom: 0 !important;
}

table {
  width: 100%;
}

.w0 {
  width: 1px;
  white-space: nowrap;
}

.align-center {
  text-align: center;
}

.light {
  font-weight: lighter;
}

.normal {
  font-weight: normal;
}

pre {
  white-space: normal;
  font-size: 14px;
  margin: 0;
}