.messages
  &__contacts
    width: 260px
    border-right: 1px solid #DEE1E6
    background: white
    
    &__header
      height: 60px
    
    &__search
      padding: 11px

      i
        position: absolute
        font-size: 20px
        padding: 9px
        color: #757575

      input[type="text"]
        width: 100%
        height: 38px
        padding-left: 34px
    
    &__body
      width: 100%
  
    &__item
      cursor: pointer

      &:hover
        background: rgba(254, 233, 165, 0.58)

      &__title
        font-weight: normal
        font-size: 13px
      
      &__avatar
        padding: 12px 8px 12px 23px
        vertical-align: middle

        img
          border-radius: 50px
          height: 40px
          width: 40px
        
      &__description
        font-weight: lighter
        color: #868686
        font-size: 12px
        margin-top: 5px

    &__tabs
      .radio
        margin: 0 12px 12px 12px

        &__button
          width: 118px
          
  &__header
    background: white
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.13)

    &__user
      height: 67px
      
      table
        height: 100%
      
      &__avatar
        padding: 5px 10px 5px 20px

        img
          width: 50px
          height: 50px
          border-radius: 50px

      &__name
        font-size: 13px
      
      &__theme
        font-size: 13px
        color: #868686
        margin-top: 2px
        font-weight: lighter
    
    &__info
      height: 25px
      
      &__position
        display: inline-block
        margin-left: 25px
        font-size: 13px
        
        a
          color: #2196f3
          text-decoration: none


  &__footer
    height: 145px
    padding: 15px
    background: #F2F3F4
    
    textarea
      height: 70px
      
    &__file
      background: white
      display: inline-block
      white-space: nowrap
      border-radius: 25px
      margin-top: 10px
      border: 1px solid rgb(222, 225, 230)
      cursor: pointer

      input[type="file"]
        display: none

      &-name
        padding: 0 15px 0 10px
          
      &-btn
        border-radius: 25px
        width: 32px
        padding: 0
        border: none
        font-size: 17px
        vertical-align: middle
        line-height: 33px
      
  &__send-btn
    height: 37px
    line-height: 35px
    margin-top: 7px
    
  .send-by
    margin: 17px
    display: inline-block
    vertical-align: top
  
  