.p
  &-sidebar
    position: absolute
    top: 90px
    left: 27px
    z-index: 1

  &-search
    position: absolute
    left: 230px
    right: 400px
    top: 20px

  &-logo
    position: absolute
    z-index: 2
    left: 30px
    top: 25px
  
  &-search__footer
    position: absolute
    top: 38px
    left: 0
    right: 82px
    margin-top: -38px
    transition: .3s
    
    &.active
      margin-top: 0

      .search__tags
        box-shadow: 1px 2px 3px rgba(0, 0, 0, 0.11)

  &-widget
    position: absolute
    right: 30px
    top: 20px
    
  &-extended-search
    position: absolute
    top: 40px
    right: -255px
    visibility: hidden
    transition: visibility 0s linear 0.2s, opacity 0.2s linear, right 0.2s linear
    opacity: 0
    z-index: 4
    
    &.show
      visibility: visible
      transition-delay: 0s
      right: -235px
      opacity: 1
    
    &:before, &:after
      content: ""
      display: block
      width: 0
      height: 0
      border-style: solid
      border-width: 7.5px 10px 7.5px 0
      position: absolute
      left: -10px
      top: 9px
    
    &:before
      border-color: transparent rgba(204, 204, 204, 0.38) transparent transparent
      left: -11px
      top: 10px

    &:after
      border-color: transparent white transparent transparent
